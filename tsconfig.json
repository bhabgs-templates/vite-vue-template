{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "vite/client",
      "jest",
    ],
    "typeRoots": [
      "./node_modules/@types/",
      "./types",
    ],
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "-/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}